<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <OutputType>WinExe</OutputType>
    <TargetFramework>net8.0-windows</TargetFramework>
    <Nullable>enable</Nullable>
    <ImplicitUsings>enable</ImplicitUsings>
    <UseWPF>true</UseWPF>
  </PropertyGroup>

  <ItemGroup>
    <None Remove="fonts\PressStart2P-Regular.ttf" />
    <None Remove="icons\pauseIcon.png" />
    <None Remove="icons\playIcon.png" />
    <None Remove="icons\restartIcon.png" />
    <None Remove="icons\soundOffIcon.png" />
    <None Remove="icons\soundOnIcon.png" />
    <None Remove="settingsIcon.png" />
    <None Remove="tetrisTheme.mp3" />
  </ItemGroup>

  <ItemGroup>
    <Content Include="tetrisTheme.mp3">
      <CopyToOutputDirectory>Always</CopyToOutputDirectory>
    </Content>
  </ItemGroup>

  <ItemGroup>
    <Resource Include="fonts\PressStart2P-Regular.ttf">
      <CopyToOutputDirectory>Always</CopyToOutputDirectory>
    </Resource>
    <Resource Include="icons\pauseIcon.png" />
    <Resource Include="icons\playIcon.png" />
    <Resource Include="icons\restartIcon.png">
      <CopyToOutputDirectory>Always</CopyToOutputDirectory>
    </Resource>
    <Resource Include="icons\settingsIcon.png">
      <CopyToOutputDirectory>Always</CopyToOutputDirectory>
    </Resource>
    <Resource Include="icons\soundOffIcon.png">
      <CopyToOutputDirectory>Always</CopyToOutputDirectory>
    </Resource>
    <Resource Include="icons\soundOnIcon.png">
      <CopyToOutputDirectory>Always</CopyToOutputDirectory>
    </Resource>
  </ItemGroup>

</Project>
